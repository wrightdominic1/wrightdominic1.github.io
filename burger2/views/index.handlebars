<div class="intro">
  <h3>welcome to</h3>
  <h1>Eat-A-Burger!</h1>
</div>

<div class="menu">
  <div class="left">
    <h2>Burgers! <br />(currently availible)</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="right">
    <h2><br />Discontinued.</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="clear"></div>

  <div id="add">
    <h2>Request A New Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bn">Burger Name:</label>
        <input type="text" id="bn" name="name">
      </div>

      <div class="form-group">
        <label for="eaten">Eaten Before?</label><br>
        <input type="radio" name="devoured" value="1" checked> Yes!<br>
        <input type="radio" name="devoured" value="0"> No
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>